<!DOCTYPE html>
<html>
  <head>
    <title><%= rescue_title yield :title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
  </head>

  <body id="page-top" class="<%= "mt-56" unless admin_index? %>">
    <%= render "layouts/header" unless admin_index? %>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %> m1_1rem col-md-4">
        <a href="#" data-dismiss="alert" class="close">Ã—</a>
        <ul class="list_style_none no_margin no_padding"><li><%= value %></li></ul>
      </div>
    <% end %>
    <%= yield %>
    <%= render "layouts/footer" unless admin_index? %>
  </body>

  <%= javascript_tag defer: true, nonce: true do %>
    I18n.defaultLocale = '<%= I18n.default_locale %>'
    I18n.locale = '<%= I18n.locale %>'
  <% end %>
</html>
