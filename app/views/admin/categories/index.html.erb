<% provide :title, t(".categories") %>

<h3 class="my-4"><%= t ".categories" %></h3>

<table class="table table-hover">
  <thead><tr><th colspan="3"><%= t ".name" %></th></tr></thead>

  <tbody>
    <% @admin_categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to t("admin.action.edit"), edit_admin_category_path(category),
          class: "card-link" %></td>
        <td><%= link_to t("admin.action.delete"), admin_category_path(category),
          method: :delete, data: {confirm: t("admin.action.confirm")},
          class: "card-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>

<%= paginate @admin_categories %>

<%= link_to t("admin.action.new"), new_admin_category_path, class: "card-link" %>
